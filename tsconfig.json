{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react-native",
    "lib": [
      "es6"
    ],
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noEmit": true,
    "strict": true,
    "target": "esnext",
    "typeRoots": [
      "./src/utils/types",
      "node_modules/@types"
    ],
    "strictNullChecks": false,
    "noImplicitAny": false,
    "strictFunctionTypes": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}
